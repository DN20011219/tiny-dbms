{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "app",          // debug 文件名
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/app",  // 构建后的可执行文件
        "cwd": "${workspaceFolder}",
        "preLaunchTask": "make app",  // 执行调试的前置任务名
        "MIMode": "lldb",               // 必填（与哪个 debugger 通信）
        "externalConsole": true,
        
      }
    ]
  }